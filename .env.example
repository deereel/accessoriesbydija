# Environment Configuration Template
# Copy this to .env file and fill in your actual credentials
# IMPORTANT: Add .env to .gitignore to prevent credential leaks

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=dija_accessories

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxx
# For production, use:
# PAYSTACK_PUBLIC_KEY=pk_live_xxxxx
# PAYSTACK_SECRET_KEY=sk_live_xxxxx

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxxxx
# For production, use:
# STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# STRIPE_SECRET_KEY=sk_live_xxxxx
# STRIPE_WEBHOOK_SECRET=whsec_live_xxxxx

# Remita
REMITA_MERCHANT_ID=123456
REMITA_API_KEY=your_api_key_here
REMITA_SERVICE_ID=service_id_here
REMITA_PUBLIC_KEY=pk_test_xxxxx

# Email Configuration (for sending confirmations)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@dija.com
MAIL_FROM_NAME="Accessories by Dija"
ADMIN_EMAIL=admin@yourdomain.com

# Application
APP_ENV=testing
# Change to 'production' when ready for live
APP_DEBUG=false
APP_URL=https://yourdomain.com

# CDN
CDN_URL=https://cdn.yourdomain.com

# Shipping
SHIPPING_COST=5.00
SHIPPING_CURRENCY=GBP
